<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cream"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_back"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Create Movie"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textAlignment="center"/>

    </LinearLayout>

    <EditText
        android:id="@+id/editTextMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Name"
        android:layout_marginBottom="16dp"
        android:textColor="@color/brown"/>

    <EditText
        android:textColor="@color/brown"
        android:id="@+id/editTextDirectorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Director Name"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:textColor="@color/brown"
        android:id="@+id/editTextReleaseDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Release Date (e.g., YYYY-MM-DD)"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:textColor="@color/brown"
        android:id="@+id/editTextImageLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Copy the movie poster link"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:textColor="@color/brown"
        android:id="@+id/editTextSynopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Synopsis"
        android:layout_marginBottom="16dp"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="6"/>


    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Movie"
        android:backgroundTint="@color/green"/>

</LinearLayout>